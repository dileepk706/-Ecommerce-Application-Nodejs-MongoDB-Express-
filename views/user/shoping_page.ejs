                                        <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                                            <div class="card product-item border-0 mb-4">
                                                <div style="width: 80px; margin-left: 94px;" class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                                    <img style="height: 146px" class="img-fluid w-100" src="\public\uploads\<%= product.image[0] %>" alt="">
                                                </div>
                                                <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                                    <h6 class="text-truncate mb-3"><%= product.name %></h6>
                                                    <div class="d-flex justify-content-center">
                                                        <h6><%= product.price %></h6><h6 class="text-muted ml-2"><del>$123.00</del></h6>
                                                    </div>
                                                </div>
                                                <div class="card-footer d-flex justify-content-between bg-light border">
                                                    <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                                                    <a href="" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                                                </div>
                                            </div>
                                        </div>
                                           
                                          <% }) %>

                                <% } %>



                                <% if(products ){ %>

                                    <% products.forEach(product => { %>
                         
                                            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                                                <div class="card product-item border-0 mb-4">
                                                    <a href="/product_details?id=<%= product._id %>">

                                                        <div style="width: 121px; margin-left: 80px;" class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                                                            <img style="height: 180px" class="img-fluid w-100" src="\public\uploads\<%= product.image[0] %>" alt="">
                                                        </div>
                                                        <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                                                            <h6 class="font-weight-bold text-truncate mb-3"><%= product.name %></h6>
                                                            <div class="d-flex justify-content-center">
                                                                <h6 style="font-weight: 100;"><%= product.price %></h6><h6 class="text-muted ml-2"> </h6>
                                                            </div>
                                                        </div>
                                                        <div class="card-footer d-flex justify-content-between bg-light border">
                                                            <a onclick="add_wishlist('<%=product._id%>')"  class="btn btn-sm text-dark p-0"><i class="fas fa-heart"></i>Add to wishlist</a>
                                                            <a href="/viewcart?product=<%=product._id%>" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                                                        </div>

                                                    </a>
                                                   
                                                </div>
                                            </div>
                                               
                                              <% }) %>
    
                                    <% } %>
                                    <div class="pagination text-small text-uppercase text-extra-dark-gray mt-4">
                                        <ul class="ps-0">
                                            <!-- <li><a href="#"><i class="fas fa-long-arrow-alt-left me-1 d-none d-sm-inline-block"></i> Prev</a></li> -->
                                            <!-- <li class="active"><a href="#">1</a></li> -->
                                            <%for(let count = 1; count <= totalPage; count++ ){%>
                                            <li><a href="?page=<%=count%>"><%=count%></a></li>
                                             <%}%>
                                            <!-- <li><a href="#">Next <i class="fas fa-long-arrow-alt-right ms-1 d-none d-sm-inline-block"></i></a></li> -->
                                        </ul>
                                    </div>
                                    <% if(error ){ %>
                                    <div class="  m-5 d-flex justify-content-center">
                                        <h2 class=" m-5 text-danger">No Products available!</h2> 
                                    </div>
                                    <% } %>
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>

    <script>
        function add_wishlist(prdctId){

            fetch(`http://localhost:3000/wishlist?prdctId=${prdctId}`,{
                method:'PUT'
            }).then(response=>response.json()).then(data=>{
                swal(data.message); 
            }).catch(err=>{
                alert(err.message)
            })
        }
     </script>
