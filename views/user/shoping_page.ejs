    <!-- Shop Start -->
    <div class="container-fluid pt-5">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-12">
                <!-- Price Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter by price</h5>
                    <form action="/filter">
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input class="form-control" name="Price_above" type="number" value="<%= maxPrice %>" placeholder="Price above">
                             
                        </div>
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <input class="form-control" name="price_below" type="number" value="<%= minPrice %>" placeholder="Price Below">
                             
                        </div>
                         
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <button class="form-control">Check</button> 
                        </div>
                        
                    </form>
                </div>
                <!-- Price End -->
                
                <!-- Category Start -->
                <div class="border-bottom mb-4 pb-4">
                    <h5 class="font-weight-semi-bold mb-4">Filter 2</h5>
                   
                    <form>
                        
                        <div class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
