                            <div class="col-sm-4">
                                <div class="product-img">
                                    <a href="/product_details?id=<%= product._id%>">
                                        <img src="\public\uploads\<%= product.image[0] %>" alt="..."></a>
                                </div>
                            </div>

                            <div class="col-sm-8">

                                <div class="product-list">

                                    <div class="product-description">
                                        <h3><a href="/product_details?id=<%= product._id%>"><%= product.name %></a></h3>
                                        <h4 class="price">
                                                    <span class="offer-price">â‚¹ <%= product.price %></span>
                                                </h4>
